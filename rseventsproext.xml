<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="search" method="upgrade">
    <name>plg_search_rseventsproext</name>
    <creationDate>March 2012</creationDate>
    <copyright>Copyright (C) 2012 www.rsjoomla.com; (C) 2014 Samuel Mehrbrodt. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <author>Samuel Mehrbrodt</author>
    <authorEmail>s.mehrbrodt@gmail.com</authorEmail>
    <authorUrl>https://github.com/smehrbrodt/rseventspro_plg_search</authorUrl>
    <version>2.0</version>
    <description>PLG_SEARCH_RSEVENTSPROEXT_XML_DESCRIPTION</description>

    <files>
        <folder>language</folder>
        <filename plugin="rseventsproext">rseventsproext.php</filename>
        <filename>index.html</filename>
    </files>

    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="search_limit"
                       type="text"
                       default="50"
                       description="PLG_SEARCH_RSEVENTSPROEXT_FIELD_SEARCHLIMIT_DESC"
                       label="PLG_SEARCH_RSEVENTSPROEXT_FIELD_SEARCHLIMIT_LABEL"
                       size="5" />
                <field name="enable_event_description_search"
                       type="radio"
                       default="1"
                       label="PLG_SEARCH_RSEVENTSPROEXT_ENABLE_DESC_SEARCH"
                       description="PLG_SEARCH_RSEVENTSPROEXT_ENABLE_DESC_SEARCH_DESC">
                    <option value="1">JGLOBAL_YES</option>
                    <option value="0">JGLOBAL_NO</option>
                </field>
                <field name="enable_event_location_search"
                       type="radio"
                       default="1"
                       label="PLG_SEARCH_RSEVENTSPROEXT_ENABLE_LOCATION_SEARCH"
                       description="PLG_SEARCH_RSEVENTSPROEXT_ENABLE_LOCATION_SEARCH_DESC">
                    <option value="1">JGLOBAL_YES</option>
                    <option value="0">JGLOBAL_NO</option>
                </field>
            </fieldset>
        </fields>
    </config>

</extension>
